<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="Content-Style-Type" content="text/css" />
        <link href="{{ request.static_path('miteru:static/post.css') }}" rel="stylesheet" />
        <meta http-equiv="content-script-type" content="text/javascript" />
        <script type="text/javascript" src="{{ request.static_path('miteru:static/js/hmac-sha1.js') }}"></script>
        <script type="text/javascript" src="{{ request.static_path('miteru:static/js/post.js') }}"></script>
        <meta name="copyright" content="(C) 2012 yosida95" />
        <meta name="Author" content="yosida95" />
        <meta name="robots" content="None" />
        <title>見てるなう(仮)</title>
    </head>
    <body>
        <h1>見てるなう(仮)</h1>
        <div id="message"></div>
        <form id="post_form" method="post" action="{{ request.route_path('post') }}">
            {% if title %}
            <p>{{ title }}</p>
            {% else %}
            <p>{{ url }}</p>
            {% endif %}
            <input type="hidden" name="title" value="{{ title }}" />
            <input type="hidden" name="url" value="{{ url }}" />
            <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}" />
            <input type="text" name="comment" title="コメント" value="コメント" />
            <button type="submit" value="投稿">投稿</button>
        </form>
        <p>&copy; 2012 <a href="https://yosida95.com/">yosida95</a></p>
    </body>
</html>
